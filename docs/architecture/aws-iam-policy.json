{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "NestedPhoenixBackupS3Access",
            "Effect": "Allow",
            "Action": [
                "s3:PutObject",
                "s3:PutObjectAcl",
                "s3:GetObject",
                "s3:DeleteObject"
            ],
            "Resource": [
                "arn:aws:s3:::nestedphoenix/backups/*"
            ]
        },
        {
            "Sid": "NestedPhoenixBackupS3ListBucket",
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::nestedphoenix"
            ],
            "Condition": {
                "StringLike": {
                    "s3:prefix": [
                        "backups/*"
                    ]
                }
            }
        }
    ]
}